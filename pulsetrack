        <button class="close" type="button" id="closeModal">√ó</button>
      </div>

      <div class="row" style="margin-bottom:10px">
        <span class="badge">Plan: <b id="demoPlan">Growth</b></span>
        <span class="badge">Response: <b>Same day</b></span>
        <span class="badge">Goal: <b>Booked jobs</b></span>
      </div>

      <!-- Netlify Forms: works when hosted on Netlify; also stores submissions -->
      <form id="demoForm" name="demo-request" method="POST" data-netlify="true" netlify-honeypot="bot-field">
        <!-- Required hidden input for Netlify -->
        <input type="hidden" name="form-name" value="demo-request" />
        <!-- Honeypot field (bots) -->
        <p style="display:none">
          <label>Don‚Äôt fill this out: <input name="bot-field" /></label>
        </p>

        <div class="twoCol" style="gap:10px; width:100%">
          <input required name="firstName" placeholder="First name" />
          <input required name="lastName" placeholder="Last name" />
        </div>

        <div class="twoCol" style="gap:10px; width:100%; margin-top:10px">
          <input required type="email" name="email" placeholder="Email" />
          <input name="company" placeholder="Company (optional)" />
        </div>

        <div class="twoCol" style="gap:10px; width:100%; margin-top:10px">
          <input name="phone" placeholder="Phone (optional)" />
          <select name="serviceArea">
            <option value="one-city">One city / small area</option>
            <option value="multi-city">Multiple cities</option>
            <option value="regional">Regional coverage</option>
          </select>
        </div>

        <div class="twoCol" style="gap:10px; width:100%; margin-top:10px">
          <select name="currentLeadSource">
            <option value="none">No current system</option>
            <option value="word-of-mouth">Word of mouth</option>
            <option value="facebook">Facebook</option>
            <option value="google">Google</option>
            <option value="marketplaces">Marketplaces (Thumbtack/HomeStars/etc.)</option>
            <option value="other">Other</option>
          </select>
          <select name="volume">
            <option value="under-10">Under 10 leads/month</option>
            <option value="10-30">10‚Äì30 leads/month</option>
            <option value="30-80">30‚Äì80 leads/month</option>
            <option value="80-plus">80+ leads/month</option>
          </select>
        </div>

        <textarea name="needs" rows="4" style="width:100%; margin-top:10px"
          placeholder="What jobs do you want more of? (cleanouts, appliances, debris, estate, etc.)"></textarea>

        <!-- Filled by JS -->
        <input type="hidden" name="plan" id="planField" value="Growth" />
        <input type="hidden" name="billing" id="billingField" value="monthly" />

        <div class="row" style="justify-content:space-between; width:100%; margin-top:10px">
          <span class="mini">By submitting, you agree to the Terms & Privacy.</span>
          <button class="btn primary" type="submit">Submit Demo Request</button>
        </div>
        <div class="mini" id="demoHint" style="width:100%; margin-top:8px"></div>
      </form>
    </div>
  </div>

  <!-- LEGAL MODAL -->
  <div class="overlay" id="legalOverlay">
    <div class="modal" role="dialog" aria-modal="true" aria-label="Legal">
      <div class="modalHeader">
        <h3 id="legalTitle">Terms</h3>
        <button class="close" type="button" id="closeLegal">√ó</button>
      </div>
      <div id="legalBody" class="muted" style="line-height:1.7; font-size:14px"></div>
    </div>
  </div>

  <div class="toast" id="toast"></div>

  <script>
    // ===== Pricing (monthly + annual: "2 months free") =====
    const PRICES = {
      monthly: { starter: 499, growth: 999, scale: 1499 },
      annual:  { starter: 4990, growth: 9990, scale: 14990 } // ~2 months free vs monthly * 12
    };
    let billing = "monthly";

    const el = (id) => document.getElementById(id);
    const toast = (msg) => {
      const t = el("toast");
      t.textContent = msg;
      t.style.display = "block";
      clearTimeout(window.__toastTimer);
      window.__toastTimer = setTimeout(()=> t.style.display="none", 2600);
    };

    function renderPrices(){
      if (billing === "monthly"){
        el("priceStarter").innerHTML = `$${PRICES.monthly.starter}<span class="mini">/mo</span>`;
        el("priceGrowth").innerHTML  = `$${PRICES.monthly.growth}<span class="mini">/mo</span>`;
        el("priceScale").innerHTML   = `$${PRICES.monthly.scale}<span class="mini">/mo</span>`;
      } else {
        el("priceStarter").innerHTML = `$${PRICES.annual.starter.toLocaleString()}<span class="mini">/yr</span>`;
        el("priceGrowth").innerHTML  = `$${PRICES.annual.growth.toLocaleString()}<span class="mini">/yr</span>`;
        el("priceScale").innerHTML   = `$${PRICES.annual.scale.toLocaleString()}<span class="mini">/yr</span>`;
      }
      el("billingField").value = billing;
    }

    el("monthlyBtn").addEventListener("click", () => {
      billing = "monthly";
      el("monthlyBtn").classList.add("active");
      el("annualBtn").classList.remove("active");
      renderPrices();
    });
    el("annualBtn").addEventListener("click", () => {
      billing = "annual";
      el("annualBtn").classList.add("active");
      el("monthlyBtn").classList.remove("active");
      renderPrices();
    });

    // ===== Demo Modal =====
    const overlay = el("overlay");
    const legalOverlay = el("legalOverlay");

    function openDemo(plan){
      el("demoPlan").textContent = plan || "Growth";
      el("planField").value = plan || "Growth";
      el("demoTitle").textContent = plan ? `Request a ${plan} Demo` : "Request a Demo";
      overlay.style.display = "flex";
      document.body.style.overflow = "hidden";
      el("demoHint").textContent = "";
    }
    function closeDemo(){
      overlay.style.display = "none";
      document.body.style.overflow = "";
      el("demoHint").textContent = "";
      el("demoForm").reset();
      // keep hidden defaults after reset
      el("planField").value = "Growth";
      el("billingField").value = billing;
    }

    el("demoBtnTop").addEventListener("click", () => openDemo("Growth"));
    el("demoBtnHero").addEventListener("click", () => openDemo("Growth"));
    el("closeModal").addEventListener("click", closeDemo);
    overlay.addEventListener("click", (e) => { if (e.target === overlay) closeDemo(); });

    document.addEventListener("click", (e) => {
      const plan = e.target?.getAttribute?.("data-plan");
      if (plan) openDemo(plan);
    });

    // ===== Netlify forms: show friendly message after submit =====
    el("demoForm").addEventListener("submit", () => {
      // Let Netlify handle the actual submission; we just show feedback.
      el("demoHint").textContent = "Submitting‚Ä¶ If this is hosted on Netlify, your request will be saved and emailed to you.";
      toast("Demo request submitting‚Ä¶");
      // Note: On success, Netlify redirects by default only if you set action="".
      // We'll keep it simple: you can close modal after submit if you want:
      setTimeout(() => {
        toast("Submitted (or queued). Check Netlify Forms submissions.");
      }, 1200);
    });

    // ===== Legal Modals (placeholders) =====
    const LEGAL = {
      terms: `
        <p><b>Terms of Service (placeholder)</b></p>
        <p>PulseTrack provides a lead capture and tracking service for businesses. You agree to use the service only for lawful marketing and customer communications.</p>
        <p><b>No guaranteed outcomes.</b> Results vary by market, season, service quality, and response time.</p>
        <p><b>Billing.</b> Plans renew unless canceled. Enterprise may use a custom agreement.</p>
        <p>Replace this placeholder with your finalized legal terms when you are ready.</p>
      `,
      privacy: `
        <p><b>Privacy Policy (placeholder)</b></p>
        <p>We collect contact information submitted in demo requests (name, email, phone, company) to respond and provide service information. We may store form submissions in Netlify Forms (or your chosen provider).</p>
        <p>Replace this placeholder with your finalized privacy policy when you are ready.</p>
      `,
      security: `
        <p><b>Security (placeholder)</b></p>
        <p>We use access controls and standard web security practices where available. Replace this with your security posture details (encryption, retention, incident response) if you scale.</p>
      `,
      contact: `
        <p><b>Contact</b></p>
        <p>Email: <b>pulsetrack@zohomail.com</b> (temporary)</p>
        <p>Replace with your real business inbox later.</p>
      `
    };

    function openLegal(title, bodyHtml){
      el("legalTitle").textContent = title;
      el("legalBody").innerHTML = bodyHtml;
      legalOverlay.style.display = "flex";
      document.body.style.overflow = "hidden";
    }
    function closeLegal(){
      legalOverlay.style.display = "none";
      document.body.style.overflow = "";
    }

    el("closeLegal").addEventListener("click", closeLegal);
    legalOverlay.addEventListener("click", (e) => { if (e.target === legalOverlay) closeLegal(); });

    el("termsLink").addEventListener("click", (e) => { e.preventDefault(); openLegal("Terms", LEGAL.terms); });
    el("privacyLink").addEventListener("click", (e) => { e.preventDefault(); openLegal("Privacy", LEGAL.privacy); });
    el("securityLink").addEventListener("click", (e) => { e.preventDefault(); openLegal("Security", LEGAL.security); });
    el("contactLink").addEventListener("click", (e) => { e.preventDefault(); openLegal("Contact", LEGAL.contact); });

    // ===== Share button (Web Share API, else copy URL) =====
    el("shareBtn").addEventListener("click", async () => {
      const shareData = {
        title: "PulseTrack ‚Äî Junk Removal Leads + Tracking",
        text: "More booked jobs. Clear tracking. Simple system.",
        url: (location && location.href) ? location.href : "https://pulsetrack.example/"
      };
      try{
        if (navigator.share){
          await navigator.share(shareData);
        } else {
          await navigator.clipboard.writeText(shareData.url);
          toast("Link copied to clipboard.");
        }
      }catch(err){
        console.error(err);
        toast("Couldn‚Äôt share. If allowed, copy the URL from the address bar.");
      }
    });

    // Init
    renderPrices();
  </script>
</body>
</html>
